{
  "name": "portfolio-personal",
  "version": "1.0.0",
  "description": "Portafolio profesional de desarrollo web",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --no-browser",
    "start": "npm run dev",
    "build": "npm run build:css",
    "build:css": "postcss src/css/style.css -o dist/css/style.min.css --env production",
    "watch:css": "postcss src/css/style.css -o dist/css/style.css --watch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,html,css}\"",
    "lint": "eslint src/js/**/*.js"
  },
  "keywords": [
    "portfolio",
    "desarrollo-web",
    "frontend",
    "html",
    "css",
    "javascript"
  ],
  "author": "Tu Nombre <tu@email.com>",
  "license": "MIT",
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^16.0.1",
    "postcss-preset-env": "^9.1.4",
    "prettier": "^3.1.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "tailwindcss": "^3.3.5"
  }
}